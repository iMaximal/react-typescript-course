{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "esNext",
    "target": "es6",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@forms/*": [
        "src/forms/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@style/*": [
        "src/stylus/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@translations/*": [
        "src/assets/translations/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@mocks/*": [
        "src/__mocks__/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "backend",
    "scripts",
    "coverage",
    "node_modules",
    "./build/**/*"
  ]
}
